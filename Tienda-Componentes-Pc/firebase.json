{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist/tienda-componentes-pc",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
